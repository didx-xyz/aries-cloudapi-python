FROM bcgovimages/von-image:py36-1.16-1

USER root
RUN apt-get update
RUN apt-get update && apt-get install -y gcc

RUN pip3 install "aries-cloudagent[askar,indy] @ git+https://github.com/morrieinmaas/aries-cloudagent-python.git@feat/1980/bump-nacl-dep"

ADD https://github.com/stedolan/jq/releases/download/jq-1.6/jq-linux64 ./jq
RUN chmod +x ./jq
COPY scripts/startup.sh startup.sh
RUN chmod +x ./startup.sh

USER $user

CMD ./startup.sh --wallet-type askar
