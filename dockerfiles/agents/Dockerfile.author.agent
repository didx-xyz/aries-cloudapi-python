FROM ghcr.io/hyperledger/aries-cloudagent-python:py3.9-0.10.5

USER root

RUN pip3 install --no-cache-dir acapy-wallet-groups-plugin==0.5.3

COPY scripts/startup.sh startup.sh
RUN chmod +x ./startup.sh

USER aries

ENTRYPOINT [ "./startup.sh" ]
CMD [ "--wallet-type", "askar", "--auto-promote-author-did", "--plugin", "acapy_wallet_groups_plugin" ]
